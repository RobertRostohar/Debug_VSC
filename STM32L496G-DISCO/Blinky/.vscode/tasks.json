{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMSIS Erase",
            "type": "shell",
            "command": [
                "echo Erase > .cmd.jlink &&",
                "echo Exit >> .cmd.jlink &&",
                "jlink -device ${command:cmsis-csolution.getDeviceName} -if SWD -speed auto -commandfile .cmd.jlink"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load",
            "type": "shell",
            "command": [
                "echo LoadFile out/Blinky/STM32L496G-DISCO/Debug/Blinky.hex > .cmd.jlink &&",
                "echo Exit >> .cmd.jlink &&",
                "jlink -device ${command:cmsis-csolution.getDeviceName} -if SWD -speed auto -commandfile .cmd.jlink"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Run",
            "type": "shell",
            "command": "JLinkGDBServer",
            "args": [
                "-device", "${command:cmsis-csolution.getDeviceName}",
                "-if", "SWD",
                "-speed", "auto",
                "-noir",
                "-nogui",
                "-singlerun",
                "-localhostonly",
                "-port", "3333"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Run",
            "dependsOn": [
                "CMSIS Load",
                "CMSIS Run"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Debug",
            "dependsOn": [
                "CMSIS Load"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "C:/Keil/UV4/UV4.exe",
            "args": [
                "${command:cmsis-csolution.getSolutionFile}"
            ],
            "problemMatcher": []
        },
    ]
}