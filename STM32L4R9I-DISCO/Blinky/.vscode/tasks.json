{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMSIS Erase",
            "type": "shell",
            "command": "pyocd erase --chip --cbuild-run ${command:cmsis-csolution.getCbuildRunFile}",
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load",
            "type": "shell",
            "command": "pyocd load --no-reset --cbuild-run ${command:cmsis-csolution.getCbuildRunFile} ${command:cmsis-csolution.getBinaryFile}",
            "problemMatcher": []
        },
        {
            "label": "CMSIS Run",
            "type": "shell",
            "command": "pyocd gdbserver --cbuild-run ${command:cmsis-csolution.getCbuildRunFile}",
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Run",
            "dependsOn": [
                "CMSIS Load",
                "CMSIS Run"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Debug", 
            "dependsOn": [
                "CMSIS Load"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "C:/Keil/UV4/UV4.exe",
            "args": [
                "${command:cmsis-csolution.getSolutionFile}"
            ],
            "problemMatcher": []
        },
        {
            "type": "arm-debugger.flash",
            "serialNumber": "${command:device-manager.getSerialNumber}",
            "program": "${command:arm-debugger.getApplicationFile}",
            "cmsisPack": "${command:cmsis-csolution.getTargetPack}",
            "deviceName": "${command:cmsis-csolution.getDeviceName}",
            "processorName": "${command:cmsis-csolution.getProcessorName}",
            "problemMatcher": [],
            "label": "arm-debugger.flash: Flash Device"
        }
    ]
}